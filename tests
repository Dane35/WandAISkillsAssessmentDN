Playwright tests

import { test, expect } from '@playwright/test';

test.describe('Sauce Demo Website', () => {
  test('should navigate to Log In page', async ({ page }) => {
    await page.goto('https://sauce-demo.myshopify.com/');
    await page.getByRole('link', { name: 'Log In' }).click();

    await expect(page).toHaveURL('https://sauce-demo.myshopify.com/account/login');
    await expect(page).toHaveTitle('Account â€“ Sauce Demo');
  });

  test('should navigate to Search page', async ({ page }) => {
    await page.goto('https://sauce-demo.myshopify.com/');
    await page.getByRole('banner').getByRole('link', { name: 'Search' }).click();

    await expect(page).toHaveURL('https://sauce-demo.myshopify.com/search');
    await expect(page).toHaveTitle('Search â€“ Sauce Demo');
  });

  test('should navigate to About Us page', async ({ page }) => {
    await page.goto('https://sauce-demo.myshopify.com/');
    await page.getByRole('banner').getByRole('link', { name: 'About Us' }).click();

    await expect(page).toHaveURL('https://sauce-demo.myshopify.com/pages/about-us');
    await expect(page).toHaveTitle('About Us â€“ Sauce Demo');
  });

  test('should navigate to Grey Jacket product page', async ({ page }) => {
    await page.goto('https://sauce-demo.myshopify.com/');
    await page.locator('a:has-text("Grey jacket Grey jacket Â£55.00")').click();

    await expect(page).toHaveURL('https://sauce-demo.myshopify.com/collections/frontpage/products/grey-jacket');
    await expect(page).toHaveTitle(/Grey jacket/);
  });
});

API Tests

import requests
import json
import pytest

BASE_URL = "http://httpbin.org"

def test_get_request():
    """Test GET request to httpbin.org"""
    response = requests.get(f"{BASE_URL}/get")
    
    assert response.status_code == 200
    data = response.json()
    assert 'url' in data
    assert 'headers' in data
    assert data['url'] == f"{BASE_URL}/get"

def test_post_request():
    """Test POST request with JSON data"""
    payload = {"name": "test", "value": 123}
    response = requests.post(f"{BASE_URL}/post", json=payload)
    
    assert response.status_code == 200
    data = response.json()
    assert 'json' in data
    assert data['json'] == payload
    assert data['headers']['Content-Type'] == 'application/json'

def test_put_request():
    """Test PUT request"""
    payload = {"update": "test_data", "id": 456}
    response = requests.put(f"{BASE_URL}/put", json=payload)
    
    assert response.status_code == 200
    data = response.json()
    assert data['json'] == payload

def test_delete_request():
    """Test DELETE request"""
    response = requests.delete(f"{BASE_URL}/delete")
    
    assert response.status_code == 200
    data = response.json()
    assert 'url' in data

def test_query_parameters():
    """Test GET request with query parameters"""
    params = {
        'key1': 'value1',
        'key2': 'value2',
        'number': 123
    }
    response = requests.get(f"{BASE_URL}/get", params=params)
    
    assert response.status_code == 200
    data = response.json()
    assert 'args' in data
    assert data['args']['key1'] == 'value1'
    assert data['args']['key2'] == 'value2'
    assert data['args']['number'] == '123'  # Query params are strings

def test_custom_headers():
    """Test request with custom headers"""
    headers = {
        'X-Custom-Header': 'test-value',
        'Authorization': 'Bearer token123'
    }
    response = requests.get(f"{BASE_URL}/headers", headers=headers)
    
    assert response.status_code == 200
    data = response.json()
    assert 'headers' in data
    assert data['headers']['X-Custom-Header'] == 'test-value'
    assert data['headers']['Authorization'] == 'Bearer token123'

def test_status_code_check():
    """Test different HTTP status codes"""
    # Test 404 status
    response = requests.get(f"{BASE_URL}/status/404")
    assert response.status_code == 404
    
    # Test 500 status
    response = requests.get(f"{BASE_URL}/status/500")
    assert response.status_code == 500
    
    # Test 200 status
    response = requests.get(f"{BASE_URL}/status/200")
    assert response.status_code == 200

def test_user_agent():
    """Test user agent endpoint"""
    custom_user_agent = "MyTestClient/1.0"
    headers = {'User-Agent': custom_user_agent}
    response = requests.get(f"{BASE_URL}/user-agent", headers=headers)
    
    assert response.status_code == 200
    data = response.json()
    assert 'user-agent' in data
    assert data['user-agent'] == custom_user_agent

def test_ip_address():
    """Test IP address endpoint"""
    response = requests.get(f"{BASE_URL}/ip")
    
    assert response.status_code == 200
    data = response.json()
    assert 'origin' in data
    assert isinstance(data['origin'], str)
    assert len(data['origin']) > 0

def test_delay_request():
    """Test delayed response"""
    import time
    
    start_time = time.time()
    response = requests.get(f"{BASE_URL}/delay/2")  # 2 second delay
    end_time = time.time()
    
    assert response.status_code == 200
    assert (end_time - start_time) >= 2  # Should take at least 2 seconds

# Optional: Run tests if script is executed directly
if __name__ == "__main__":
    # You can run individual tests like this:
    try:
        test_get_request()
        print("âœ“ GET request test passed")
        
        test_post_request()
        print("âœ“ POST request test passed")
        
        test_put_request()
        print("âœ“ PUT request test passed")
        
        test_delete_request()
        print("âœ“ DELETE request test passed")
        
        test_query_parameters()
        print("âœ“ Query parameters test passed")
        
        test_custom_headers()
        print("âœ“ Custom headers test passed")
        
        test_status_code_check()
        print("âœ“ Status code test passed")
        
        test_user_agent()
        print("âœ“ User agent test passed")
        
        test_ip_address()
        print("âœ“ IP address test passed")
        
        test_delay_request()
        print("âœ“ Delay request test passed")
        
        print("\nAll tests passed! ğŸ‰")
        
    except Exception as e:
        print(f"âŒ Test failed: {e}")

